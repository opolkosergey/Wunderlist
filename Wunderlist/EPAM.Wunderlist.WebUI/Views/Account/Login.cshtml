@model EPAM.Wunderlist.WebUI.Models.LogOnViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<link href="~/Content/wunderlist.css" rel="stylesheet" />
<link href="~/Content/semantic.css" rel="stylesheet" />
<script src="~/Scripts/semantic.js"></script>
<script>
    $(document).ready(function() {
        $("#sendForm").click(function(event) {
            event.preventDefault();
            $("#loginForm").submit();
        });
    });
</script>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div class="ui centered stackable grid" style="margin-top: 50px;">
        <img width="100" height="75" src="~/Content/images/logo.png" />
        <div class="six column centered row">
            <div class="column">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new {@class = "ui form"}))
            {
                @Html.ValidationSummary(true)

                @Html.ValidationMessageFor(m => m.Email)
                    <div class="ui left icon input field">
                    @Html.EditorFor(m => m.Email, new {htmlAttributes = new {placeholder = "Электронная почта"}})
                        <i class="mail icon"></i>
                    </div>

                @Html.ValidationMessageFor(m => m.Password)
                    <div class="ui left icon input field">
                    @Html.EditorFor(m => m.Password, new {htmlAttributes = new {placeholder = "Пароль"}})
                        <i class="lock icon"></i>
                    </div>
                    <div class="ui error message"></div>
                <br/><br/>
                    <div align="center">@Html.ActionLink("Забыли пароль?", "")</div>
            }
            <br/>
            <div align="center">
                <button class="ui inverted blue button"><i class="facebook square icon"></i></button>
                <button class="ui inverted red button"><i class="google square icon"></i></button>
                <button class="ui white button"><i class="windows icon"></i></button>
                </div>
            <br/>
                <div align="center">Нет учетной записи? @Html.ActionLink("Создать учетную запись", "Register")</div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>

