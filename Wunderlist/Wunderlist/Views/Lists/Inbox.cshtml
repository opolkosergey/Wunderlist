
@{
    Layout = null;
}

<!DOCTYPE html>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<link href="~/Content/wunderlist.css" rel="stylesheet" />
<link href="~/Content/semantic.css" rel="stylesheet" />
<script src="~/Scripts/semantic.js"></script>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Inbox</title>
</head>
<body>
    <div class="ui standard test modal transition hidden" style="margin-top: -234px;">
        <div class="header">
            Free account
        </div>
        <div class="image content">
            <div class="ui medium image" >
                <img style="border-radius: 150px;" src="~/Content/images/Homer-Simpson.jpg" />
            </div>
            <div class="description">
                <div class="ui header">Profile</div>
                <br/>
                <div class="ui input large">
                    <label>Name</label>
                    <input type="text" style="width: 380px; margin-left: 30px;" placeholder="name">
                </div>
                <br/><br/>
                <div class="ui input large">
                    <label>Email</label>
                    <input type="text" placeholder="email" style="margin-left: 33px;">
                    <button style="margin-left: 50px;" class="ui black basic button">Change Email</button>
                </div>
                <br/><br/>
                <div class="ui input large">
                    <label>Password</label>
                    <button style="width: 205px;margin-left: 5px;" class="ui black basic button">Change Password</button>
                </div>
            </div>
        </div>
        <div class="actions">
            <div class="ui black deny button">
                Nope
            </div>
            <div class="ui positive right labeled icon button">
                Yep, that's me
                <i class="checkmark icon"></i>
            </div>
        </div>
    </div>
<div class="ui grid">
    <div class="three wide column" style="position: inherit">
        <div style="height: 45px; background-color: #5b7a59; display: flex;">
            <div>
                <svg class="list-toggle" width="20px" height="20px" style="margin-left: 10px; margin-top: 10px;" viewBox="0 0 20 20" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" xml:space="preserve">
                    <g>
                        <path d="M0.5,3.5l19,0" style="fill: none; stroke-width: 1px; stroke: white;"></path>
                        <path d="M0.5,9.53l19,0" style="fill: none; stroke-width: 1px; stroke: white;"></path>
                        <path d="M0.5,15.5l19,0" style="fill: none; stroke-width: 1px; stroke: white;"></path>
                    </g>
                </svg>
            </div>
            <div class="ui search" style="margin-left: 10px; margin-top: 3px;">
                <div class="ui icon input">
                    <input class="prompt" style="background-color: #5b7a59; border: none; width: 290px;" type="text" placeholder="">
                    <i class="search icon"></i>
                </div>
                <div class="results"></div>
            </div>
        </div>
        <div class="ui divided items">
            <div class="item">
                <div class="ui tiny image">
                    <img src="">
                </div>
                <div class="left aligned content" id="username">
                    <a>Username</a>
                </div>
                <i class="alarm outline icon" style="margin-right: 40px;"></i>
                <i class="comment outline icon" style="margin-right: 10px;"></i>
            </div>
            <div class="item">
                <i class="mail outline icon"></i>
                <div class="center aligned content">
                    Входящие
                </div>
            </div>
            @for (int i = 0; i < 5; i++)
            {
                <div class="item">
                    <i class="list layout icon"></i>
                    <div class="middle aligned content">
                        Список @i
                    </div>
                </div>
            }
        </div>
        <div style="position: fixed; bottom: 0;">
            <button class="ui blue basic button" style="width: 337px;"><i class="plus icon"></i>Создать список</button>
        </div>
    </div>
    <div class="thirteen wide column home" style="margin-left: -15px; height: 961px;">
        <div style="height: 45px; background-color: #668964; display: flex; width: 1583px; margin-left: -14px;">
            <h3 style="margin-top: 10px; margin-left: 10px; color: white">Входящие</h3>
            <div style="margin-left: 1400px; margin-top: 10px;">
                <i class="add user icon"></i>
                <i class="sort alphabet ascending icon"></i>
                <i class="ellipsis vertical icon"></i>
            </div>
        </div>
    </div>
</div>
</body>
</html>

<script>
    $(document).ready(function() {
        $("#username").click(function () {   
            $('.ui.modal').modal('show');
        });
    });
</script>

